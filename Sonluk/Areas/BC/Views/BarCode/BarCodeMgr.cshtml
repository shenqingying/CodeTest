@{
    ViewBag.Title = "采购订单-条码管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header {
    @Styles.Render("~/Content/bootstrap")
}

@Styles.Render("~/Content/sonluk-ui/panel-flow")
<div class="content-header">
    <div class="content-header-nav">
        <a href="#">采购订单</a>
        >
        <a href="#">条码管理</a>
    </div>
</div>
<div class="panel-flow">
    <table>
        <tr>
            <td class="panel-flow-table-title">操作类别&nbsp;</td>
            <td class="panel-flow-table-content">
                <input type="radio" name="o-type" value="012" checked>条码替换
                @*<input type="radio" name="o-type" value="013">条码作废
                <input type="radio" name="o-type" value="014">条码取消作废*@
            </td>
        </tr>
        <tr id="tr-old-code">
            <td class="panel-flow-table-title">条码</td>
            <td class="panel-flow-table-content"><input type="text" class="panel-search-item-input input-width-od-sn panel-search-textarea-target" name="THZF_SRWLM" id="THZF_SRWLM" value="" /></td>
        </tr>
        <tr id="tr-new-code">
            <td class="panel-flow-table-title">新条码</td>
            <td class="panel-flow-table-content"><input type="text" class="panel-search-item-input input-width-od-sn panel-search-textarea-target" name="THZF_TGWLM" id="THZF_TGWLM" value="" /></td>
        </tr>
    </table>
    <div class="panel-search-submit sonluk-button panel-search-button">确&nbsp;&nbsp;认</div>
    <input type="hidden" value="@Url.Action("_BarCodeTHZF", "BarCode", new { area = "BC" })">
</div>

