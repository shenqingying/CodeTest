@using Sonluk.UI.Model.MM.PurchaseOrderService
@model IEnumerable<POItemInfo>
<input type="hidden" value="@Model.Count()" id="node-count">
<table class="data-table">
    <tr>
        <td class="data-table-header">采购凭证</td>
        <td class="data-table-header">行项目</td>
        <td class="data-table-header">交货计划行</td>
        <td class="data-table-header">工厂名称</td>
        <td class="data-table-header">销售凭证</td>
        <td class="data-table-header">行项目</td>
        <td class="data-table-header">网络号</td>
        <td class="data-table-header">日期</td>
        <td class="data-table-header">物料</td>
        <td class="data-table-header">物料描述</td>
        <td class="data-table-header">数量</td>
        <td class="data-table-header">已收货数量</td>
        <td class="data-table-header">需发货数量</td>
        <td class="data-table-header">箱只数</td>
        <td class="data-table-header">托只数</td>
        <td class="data-table-header">备注</td>
        <td class="data-table-header">交货日期</td>
        <td class="data-table-header">交货地点</td>
        <td class="data-table-header">最后打印时间</td>
        <td class="data-table-header">库存地点</td>
        <td class="data-table-header">采购组</td>
        <td class="data-table-header">单位</td>
        <td class="data-table-header">状态</td>
        <td class="data-table-header">工厂</td>

        <td class="data-table-header">物料组</td>

        <td class="data-table-header">批次</td>
        <td class="data-table-header">优化标识</td>
        <td class="data-table-header">是否启用批次管理</td>
    </tr>
    @foreach (POItemInfo node in Model)
    {
    <tr>
        <td>@node.PONumber</td>
        <td>@node.Number</td>
        <td>@node.Line.ToString("####")</td>
        <td>@node.PlantName</td>
        <td>@node.SDDoc</td>
        <td>
            @{if (node.SDocItem != 0)
                {@node.SDocItem}}
        </td>
        <td>@node.Aufnr</td>
        <td>@node.Date</td>
        <td>@node.Material</td>
        <td class="text-align-left">@node.MaterialDescription</td>
        <td class="text-align-right @if (node.Quantity_M.Equals("X")){ @("color-changed-background") }">@node.Quantity.ToString("0.###")</td>
        <td class="text-align-right">@node.DelivQty.ToString("0.###")</td>
        <td class="text-align-right"><input type="text" value="@((node.Quantity - node.DelivQty).ToString("0.###"))" class="deliv-qty" /></td>
        <td class="text-align-right"><input type="text" value="@node.PcsInCtn.ToString("0.###")" class="deliv-qty" /></td>
        <td class="text-align-right"><input type="text" value="@node.PcsInPal.ToString("0.###")" class="deliv-qty" /></td>
        <td class="text-align-right"><input type="text" value="" class="deliv-qty" /></td>
        <td @if (node.DelivDate_M.Equals("X")) { @("class=color-changed-background") }>@node.DelivDate</td>
        <td @if (node.DelivDestID != 0) { @("class=color-changed-background") }>@node.DelivDest</td>
        <td>@(node.PrintDate + " " + node.PrintTime)</td>
        <td>@node.StgeLoc</td>
        <td>@node.PurGroup</td>
        <td>@node.BaseUOM</td>
        <td>@node.NoMoreGR</td>
        <td>@node.Plant</td>

        <td>@node.MatlGroup</td>

        <td>@node.CHARG</td>
        <td>@node.YHBS</td>
        <td>@node.XCHPF</td>
    </tr>
    }
</table>








