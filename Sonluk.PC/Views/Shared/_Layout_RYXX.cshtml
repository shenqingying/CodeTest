@using Sonluk.UI.Model.CRM.CRM_LoginService;
@{
    CRM_JURISDICTION_GROUP[] MenuInfo = null;
    if (Session["MENUINFO"] != null)
    {
        MenuInfo = (CRM_JURISDICTION_GROUP[])Session["MENUINFO"];
    }

    int loca = 0;
    if (Session["location"] != null)
    {
        loca = Convert.ToInt32(Session["location"]);
    }

    string name = "";
    if (Session["NAME"] != null)
    {
        name = Session["NAME"].ToString();
    }

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Scripts/layui2.5.4/css/layui.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/CRM/css/layui")
    @Scripts.Render("~/bundles/CRM/js/layui")

</head>
<body class="layui-layout-body">



    <div class="layui-layout layui-layout-admin">
        <div class="layui-body_nothing">
            <!-- 内容主体区域 -->
            @Scripts.Render("~/bundles/jquery")
            <script src="~/Scripts/layui2.4.5/layui.js"></script>
            @RenderBody()
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            © copyright by 双鹿电池-信息管理部
        </div>
    </div>

    <script>
        //JavaScript代码区域
        $(document).ready(function(){
            layui.use('element', function () {
                var element = layui.element;

            });
            if("@name" == ""){
                alert("由于长时间未操作,登录信息已过期,请重新登录");
                window.location.href = "../../CRM/Public/SignIn";

                return false;
            }
        });

    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
