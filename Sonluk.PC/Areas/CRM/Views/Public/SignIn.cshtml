@{
    ViewBag.Title = "中银信息管理平台";
    string errorMessage = "";
    if (Session["ErrorMessage"] != null)
    {
        errorMessage = (string)Session["ErrorMessage"];
        Session["ErrorMessage"] = null;
    }
    string username = "";
    string password = "";
    if (Request.Cookies["userName"] != null)
    {
        username = Request.Cookies["userName"].Value;
    }
    if (Request.Cookies["password"] != null)
    {
        password = Request.Cookies["password"].Value;
    }
    Layout = null;


}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    @Styles.Render("~/Content/layui/css/login")
    @Styles.Render("~/Content/layui/css/layui")
    <title>中银信息管理平台</title>
</head>
<body>
    @*background="~/Content/MES/IMAGES/1541144.jpg" style="background-size:cover;background-attachment: fixed;">*@
    <div class="login_bg">
        <div class="login_image">
            <img src="~/IMAGES/bg2.jpg" style="width: 100%; height: auto;" />
        </div>
        <div class="login">
            <h1>中银信息管理平台</h1>
            <form class="layui-form" action="@Url.Action("Verify", "Public")" method="post" id="sign-in-form">
                <div class="layui-form-item">
                    <input id="name" class="layui-input" name="name" placeholder="用户名" lay-verify="required" type="text" autocomplete="off" value="@username" />
                </div>
                <div class="layui-form-item">
                    <input id="password" class="layui-input" name="password" placeholder="密码" lay-verify="required" type="password" autocomplete="off" value="@password" />
                </div>
                <button class="layui-btn login_btn" id="demo1">登录</button>
                <div class="layui-form-item">
                    <label style="display: block;padding: 9px 15px;">@errorMessage</label>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

<script src="~/Scripts/jquery-1.8.2.js"></script>
<script src="~/Scripts/layui2.2.5/layui.all.js"></script>
<script>
    $(document).ready(function () {
        var form = layui.form;
        var layer = layui.layer;
        $("#demo1").click(function () {
            if ($("#name").val() == "" || $("#password").val() == "") {
                layer.msg("请输入用户名和密码！");
                return false;
            }

        });


    });

</script>
