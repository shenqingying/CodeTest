@{
    Layout = "~/Views/Shared/_Layout_CRM.cshtml";
    ViewBag.Title = "招待费申请";

    string Staffid = "";
    if (Session["STAFFID"] != null)
    {
        Staffid = Session["STAFFID"].ToString();
    }
    
}


<span class="layui-breadcrumb" lay-separator=">">
    <a href="../Public/Index1">首页</a>
    <a>活动管理</a>
    <a><cite>招待费申请</cite></a>
</span>
<br />
<br />


<div id="from1" class="layui-form layui-form-pane">
    <div id="div1" class="layui-form">

        <div class="layui-form-item">
            <div class="layui-input-inline">
                <button id="btn_save" class="layui-btn">保存</button>
            </div>


        </div>


        <div class="layui-form-item">
            <label class="layui-form-label">申请人：</label>
            <div class="layui-input-inline" style="width:120px;">
                <input id="staff" type="text" placeholder="必填" autocomplete="off" class="layui-input" disabled>
            </div>

            <label class="layui-form-label">申请部门：</label>
            <div class="layui-input-inline" style="width:120px;">
                <select id="department" lay-filter="department" disabled>
                    <option value="0" selected="selected"></option>
                </select>
            </div>

            <label class="layui-form-label">申请时间：</label>
            <div class="layui-input-inline" style="width:120px;">
                <input id="apply_time" type="text" placeholder="当前时间" autocomplete="off" class="layui-input" disabled>
            </div>

        </div>
        @* 第二行 *@
        <div class="layui-form-item">
            <label class="layui-form-label">招待日期：</label>
            <div class="layui-input-inline" style="width:120px;">
                <input id="ZD_time" type="text" placeholder="必填" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label">客户名称：</label>
            <div class="layui-input-inline" style="width:360px;">
                <input id="company" type="text" placeholder="必填" autocomplete="off" class="layui-input">
            </div>

        </div>
        @* 第三行 *@
        <div class="layui-form-item">

            <label class="layui-form-label">客户姓名：</label>
            <div class="layui-input-inline" style="width:600px;">
                <input id="KH_name" type="text" placeholder="必填" autocomplete="off" class="layui-input">

            </div>
        </div>
        @* 第四行 *@
        <div class="layui-form-item">
            <label class="layui-form-label">招待人数：</label>
            <div class="layui-input-inline" style="width:120px;">
                <input id="ZD_count" type="text" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label">陪客人数：</label>
            <div class="layui-input-inline" style="width:120px;">
                <input id="PK_count" type="text" autocomplete="off" class="layui-input">
            </div>
        </div>

        @* 第五行 *@
        <div class="layui-form-item">

            <label class="layui-form-label">招待事由：</label>
            <div class="layui-input-inline" style="width:600px;">
                <textarea id="reason" placeholder="请输入内容" class="layui-textarea"></textarea>
            </div>
        </div>

        @* 第六行 *@
        <div class="layui-form-item" style="width:920px;">
            <label class="layui-form-label">预计金额：</label>
            <div class="layui-input-inline" style="width:120px;">
                <input id="fee_small" type="text" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label">大写：</label>
            <div class="layui-input-inline" style="width:360px;">
                <input id="fee_big" type="text" autocomplete="off" class="layui-input" disabled>
            </div>
        </div>


        <br />
        

    </div>
</div>

<input id="staffid" hidden />

<script src="~/Scripts/jquery-1.8.2.js"></script>
<script>
    $(document).ready(function () {
        $("#staffid").val("@Staffid");

    });
</script>

<script src="~/Scripts/layui2.2.5/layui.all.js"></script>
@section scripts {
    @Scripts.Render("~/bundles/CRM/HuoDong/InsertFee")
}
