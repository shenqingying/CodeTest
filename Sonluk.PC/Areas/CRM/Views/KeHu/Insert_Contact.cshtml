<html>
<head>
    <title>客户联系人</title>
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <link href="~/Scripts/layui2.2.5/css/layui.css" rel="stylesheet" />
</head>
<body>
    <script>
    $(document).ready(function () {
        var marry = 0;
        var major = 0;
        if (sessionStorage.getItem('marry') != null) {
            marry = parseInt(sessionStorage.getItem('marry'));
            $("#marry").find("option[value = '" + marry + "']").attr("selected", "selected");
        }
        if (sessionStorage.getItem('major') != null) {
            major = parseInt(sessionStorage.getItem('major'));
            $("#major").find("option[value = '" + major + "']").attr("selected", "selected");
        }
    });
    </script>



    <form id="form1" class="layui-form">

        <br />
        @*第一行*@
        <div class="layui-form-item">
            <label class="layui-form-label">联系人：</label>
            <div class="layui-input-inline">
                <input id="name" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label">家庭地址：</label>
            <div class="layui-input-inline">
                <input id="home" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label">籍贯：</label>
            <div class="layui-input-inline">
                <input id="jiguan" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
        </div>
        @*第二行*@
        <div class="layui-form-item">
            <label class="layui-form-label">民族：</label>
            <div class="layui-input-inline">
                <input id="nation" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label">职位：</label>
            <div class="layui-input-inline">
                <input id="job" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label">爱好：</label>
            <div class="layui-input-inline">
                <input id="hobby" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
        </div>
        @*第三行*@
        <div class="layui-form-item">
            <label class="layui-form-label">婚姻状况：</label>
            <div class="layui-input-inline">
                <select id="marry" lay-filter="marry">
                    <option value="0" selected="selected"></option>
                    <option value="1">未婚</option>
                    <option value="2">已婚</option>
                </select>
            </div>
            <label class="layui-form-label">移动电话：</label>
            <div class="layui-input-inline">
                <input id="tel" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
            <label class="layui-form-label">固定电话：</label>
            <div class="layui-input-inline">
                <input id="tel1" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
        </div>
        @*第四行*@
        <div class="layui-form-item">
            <label class="layui-form-label">传真：</label>
            <div class="layui-input-inline">
                <input id="fax" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
            <label class="layui-form-label">邮箱：</label>
            <div class="layui-input-inline">
                <input id="mail" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
            <label class="layui-form-label">微信号：</label>
            <div class="layui-input-inline">
                <input id="weixin" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
        </div>
        @*第五行*@
        <div class="layui-form-item">
            <label class="layui-form-label">生日：</label>
            <div class="layui-input-inline">
                <input id="birthday" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
            <label class="layui-form-label">通信地址：</label>
            <div class="layui-input-inline">
                <input id="address" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
            <label class="layui-form-label">邮政编码：</label>
            <div class="layui-input-inline">
                <input id="postalcode" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
        </div>
        @*第六行*@
        <div class="layui-form-item">
            <label class="layui-form-label">性格：</label>
            <div class="layui-input-inline">
                <input id="nature" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label">是否主要联系人：</label>
            <div class="layui-input-inline">
                <select id="major" lay-filter="major">
                    <option value="0" selected="selected"></option>
                    <option value="1">是</option>
                    <option value="2">否</option>
                </select>
            </div>

            <label class="layui-form-label">备注：</label>
            <div class="layui-input-inline">
                <input id="remark" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
            </div>
        </div>
        @*第七行*@
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-filter="formDemo">上传照片</button>
                <img src="~/" />

            </div>
        </div>
    </form>





    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="~/Scripts/layui2.2.5/layui.js"></script>
    <script>
        layui.use(['form', 'layer', 'element','laydate'], function () {
            var form = layui.form;
            var element = layui.element;
            var table = layui.table;
            var laydate = layui.laydate;

            laydate.render({
                elem: '#birthday'
            });



        });



    </script>

</body>

</html>
