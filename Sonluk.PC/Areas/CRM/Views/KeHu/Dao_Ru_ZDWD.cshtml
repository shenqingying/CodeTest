<script>
    $(document).ready(function () {
        var form = layui.form;
        var upload = layui.upload;


        layui.use(['form', 'upload'], function () {
            var index_befo;
            upload.render({
                elem: '#btn_insert', //绑定元素
                method: 'post',
                accept: 'file',
                url: '../KeHu/Data_DaoRu_ZDWD', //上传接口
                //data: { KHID: khid },
                before: function () {

                    index_befo = layer.load();
                    //this.data = {
