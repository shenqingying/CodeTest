                    //}

                },
                done: function (res, index, upload) {
                    //上传完毕回调
                    alert(res.MSG);

                    layer.close(index_befo);
                },
                error: function (res) {
                    //请求异常回调
                    layer.msg(res);
                    layer.close(index_befo);
                }
            });
        });



    });
</script>

