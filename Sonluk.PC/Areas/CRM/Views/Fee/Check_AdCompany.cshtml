<script type="text/html" id="indexTpl">
    {{d.LAY_TABLE_INDEX+1}}
</script>


<script type="text/html" id="manage">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="delete">删除</a>
</script>


<span class="layui-breadcrumb" lay-separator=">">
    <a href="">首页</a>
    <a>广告公司管理</a>
    <a><cite>广告公司审核</cite></a>
</span>
<br />
<br />
<div class="layui-form" id="form1">
    <div class="layui-form" id="div1">
        <div class="layui-form-item">
            <button id="btn_select" class="layui-btn" lay-submit lay-filter="formDemo">查询</button>
            <button id="btn_shenhe" class="layui-btn">审核</button>
            <button id="btn_back" class="layui-btn">回退</button>
        </div>
        <div class="layui-collapse">
            <div class="layui-colla-item">
                <h2 class="layui-colla-title">查询条件</h2>
                <div id="div_select_tiaojian" class="layui-colla-content">
                    <div class="layui-input-inline">
                        <label class="layui-form-label" style="width:130px;text-align:right;">广告公司名称：</label>
                        <div class="layui-input-inline" style="width:230px;">
                            <input id="GGGSMC" type="text" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-input-inline">
                        <label class="layui-form-label" style="width:130px;text-align:right;">状态：</label>
                        <div class="layui-input-inline" style="width:230px;">
                            <select id="ISACTIVE" lay-filter="ISACTIVE" lay-search>
                                <option value="0">全部</option>
                                <option value="1" >未提交</option>
                                <option value="2" selected="selected">审核中</option>
                                <option value="3">已审核</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label" style="width:130px;text-align:right;">省份：</label>
                        <div class="layui-input-inline" style="width:230px;">
                            <select id="SF" lay-filter="SF" lay-search>
                                <option value="0" selected="selected"></option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label" style="width:130px;text-align:right;">城市：</label>
                        <div class="layui-input-inline" style="width:230px;">
                            <select id="CS" lay-filter="CS" lay-search>
                                <option value="0" selected="selected"></option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <table id="result" lay-filter="result"></table>
    </div>
</div>

<div class="layui-form-item layui-form-text" id="div_text" hidden>
   <br />
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label" style="width:130px">反馈说明：</label>
            <div class="layui-input-inline" style="width:560px">
             
                <textarea id="desc" name="desc" placeholder="请输入内容" class="layui-textarea" ></textarea>
                
            </div>
        </div>
    </div>

</div>

<script src="~/Scripts/layui2.2.5/layui.all.js"></script>

@section scripts {
    @Scripts.Render("~/bundles/CRM/Fee//Check_AdCompany")
}