<div id="from1" class="layui-form layui-form-pane">
    <div class="layui-form" id="div1">
        <div class="layui-form-item">
            <button id="btn_insert" class="layui-btn">新增</button>
            <button id="btn_select" class="layui-btn" lay-submit lay-filter="formDemo">查询</button>
            <button id="btn_check" class="layui-btn">提交</button>
        </div>
        <div class="layui-collapse">
            <div class="layui-colla-item">
                <h2 class="layui-colla-title">查询条件</h2>
                <div id="div_select_tiaojian" class="layui-colla-content">
                    <div class="layui-form-item">
                        <label class="layui-form-label" style="width:130px;text-align:right;">广告公司名称：</label>
                        <div class="layui-input-inline" style="width:230px;">
                            <input id="GGGSMC" type="text" autocomplete="off" class="layui-input">
                        </div>


                        <label class="layui-form-label" style="width:130px;text-align:right;">状态：</label>
                        <div class="layui-input-inline" style="width:230px;">
                            <select id="ISACTIVE" lay-filter="ISACTIVE" lay-search>
                                <option value="0">全部</option>
                                <option value="1" selected="selected">未提交</option>
                                <option value="2">审核中</option>
                                <option value="3">已审核</option>
                            </select>
                        </div>
                        <label class="layui-form-label" style="width:130px;text-align:right;">省份：</label>
                        <div class="layui-input-inline" style="width:230px;">
                            <select id="SF" lay-filter="SF" lay-search>
                                <option value="0" selected="selected"></option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-form-item">

                        <label class="layui-form-label" style="width:130px;text-align:right;">城市：</label>
                        <div class="layui-input-inline" style="width:230px;">
                            <select id="CS" lay-filter="CS" lay-search>
                                <option value="0" selected="selected"></option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <table id="result" lay-filter="result"></table>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/CRM/Fee/Select_AdCompany")
}