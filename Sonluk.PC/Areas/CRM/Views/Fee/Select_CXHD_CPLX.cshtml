<span class="layui-breadcrumb" lay-separator=">">
    <a href="../Public/Index1">首页</a>
    <a>费用管理</a>
    <a><cite>费用项目管理</cite></a>
</span>
<br />
<br />

<div id="from1" class="layui-form">
    <div id="div1" class="layui-form">

        <div class="layui-form-item">
            <button id="btn_cx" class="layui-btn" lay-filter="formDemo">查询</button>
            <button id="btn_insert" class="layui-btn" lay-filter="formDemo">新增</button>
        </div>


        <div class="layui-collapse">
            <div class="layui-colla-item">
                <h2 class="layui-colla-title">查询条件</h2>
                <div id="div_select_tiaojian" class="layui-colla-content">

                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label" style="width:130px;">产品类型描述：</label>
                            <div class="layui-input-inline">
                                <input id="select_cplx" type="text" autocomplete="off" class="layui-input">
                            </div>
                        </div>

                        <div class="layui-inline">
                            <label class="layui-form-label" style="width:130px;">产品分类：</label>
                            <div class="layui-input-inline">
                                <input id="select_cpfl" type="text" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>

        <table id="result" lay-filter="result"></table>


    </div>






</div>





<div id="div_jump" class="layui-form" hidden>

    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label" style="width:130px;text-align:right;">产品类型描述：</label>
            <div class="layui-input-inline">
                <input id="cplx" type="text" autocomplete="off" class="layui-input">
            </div>
        </div>

        <div class="layui-inline">
            <label class="layui-form-label" style="width:130px;text-align:right;">产品分类：</label>
            <div class="layui-input-inline">
                <input id="cpfl" type="text" autocomplete="off" class="layui-input">
            </div>
        </div>
    </div>

    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label" style="width:130px;text-align:right;">费用支持方式：</label>
            <div class="layui-input-inline">
                <select id="fyzcfs" lay-filter="fyzcfs" lay-search>
                    <option value="0" selected="selected"></option>
                    @for (int i = 0; i < FYZCFS.Length; i++)
                    {
                        <option value="@FYZCFS[i].DICID">@FYZCFS[i].DICNAME</option>
                    }
                </select>

            </div>
        </div>

        <div class="layui-inline">
            <label class="layui-form-label" style="width:130px;text-align:right;">费用支持额度：</label>
            <div class="layui-input-inline">
                <input id="fyzc" type="text" autocomplete="off" class="layui-input">
            </div>
        </div>
    </div>

    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label" style="width:130px;text-align:right;">备注：</label>
            <div class="layui-input-inline">
                <input id="beiz" type="text" autocomplete="off" class="layui-input">
            </div>
        </div>
    </div>

    <br />

</div>






<script src="~/Scripts/layui2.4.5/layui.all.js"></script>
@section scripts {
    @Scripts.Render("~/bundles/CRM/Fee/Select_CXHD_CPLX")
}
