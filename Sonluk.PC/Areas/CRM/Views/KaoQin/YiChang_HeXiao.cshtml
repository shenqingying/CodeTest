<span class="layui-breadcrumb" lay-separator=">">
    <a href="../Public/Index1">首页</a>
    <a>考勤管理</a>
    <a><cite>异常考勤核销</cite></a>
</span>
<br />
<br />

    <div id="div1" class="layui-form">

        <div class="layui-form-item">
            <button id="btn_cx" class="layui-btn">查询</button>
        </div>

        <div class="layui-form-item">



            <label class="layui-form-label">开始日期：</label>
            <div class="layui-input-inline">
                <input id="time_begin" type="text" autocomplete="off" class="layui-input" value="@ViewBag.startdate">
            </div>

            <label class="layui-form-label">结束日期：</label>
            <div class="layui-input-inline">
                <input id="time_end" type="text" autocomplete="off" class="layui-input" value="@ViewBag.enddate">
            </div>


            <label class="layui-form-label">部门：</label>
            <div class="layui-input-inline">
                <select id="department" lay-filter="department"></select>
            </div>


        </div>
        
        <div class="layui-form-item">

            <label class="layui-form-label">员工姓名：</label>
            <div class="layui-input-inline">
                <input id="staffname" type="text" class="layui-input">
            </div>

            <label class="layui-form-label">员工工号：</label>
            <div class="layui-input-inline">
                <input id="staffno" type="text" class="layui-input">
            </div>


            <label class="layui-form-label">员工类型：</label>
            <div class="layui-input-inline">
                <select id="stafftype" lay-filter="stafftype">
                    <option value="0" selected="selected">请选择</option>
                </select>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">审核状态：</label>
            <div class="layui-input-inline">
                <select id="isactive" lay-filter="isactive">
                    <option value="0">全部</option>
                    <option value="1">未提交</option>
                    <option value="2">审核中</option>
                    <option value="3" selected="selected">已审核</option>
                    <option value="31">已审核(缺勤)</option>
                </select>
            </div>

        </div>

        <table id="tb_result" lay-filter="tb_result"></table>


    </div>






<input id="staffid" value="@Staffid" hidden />
<input id="staffname" hidden />

<script src="~/Scripts/jquery-1.8.2.js"></script>
<script src="~/Scripts/layui2.2.5/layui.all.js"></script>



@section scripts {
    @Scripts.Render("~/bundles/CRM/KaoQin/YiChang_HeXiao")
}

