@{
    ViewBag.Title = "编辑拜访记录";
    Layout = "~/Views/Shared/_Layout_CRM.cshtml";
    string Staffid = "";
    if (Session["STAFFID"] != null)
    {
        Staffid = Session["STAFFID"].ToString();
    }
}

<script type="text/html" id="indexTpl">
    {{d.LAY_TABLE_INDEX+1}}
</script>

<script type="text/html" id="imgTpl">
    <img src="{{d.ML}}" onclick="window.open('{{d.ML}}')" />
</script>

<style>
    .laytable-cell-1-WJM, .laytable-cell-2-WJM, .laytable-cell-3-WJM, .laytable-cell-4-WJM, .laytable-cell-5-WJM, .laytable-cell-6-WJM, .laytable-cell-7-WJM, .laytable-cell-8-WJM, .laytable-cell-9-WJM, .laytable-cell-10-WJM { /*最后的pic为字段的field*/
        height: 100%;
        max-width: 100%;
    }
</style>



<div id="div_bar"></div>


<span class="layui-breadcrumb" lay-separator=">">
    <a href="../Public/Index1">首页</a>
    <a>客户管理</a>
    <a><cite>编辑拜访记录</cite></a>
</span>
<br />
<br />

<div class="layui-form">
    <div class="layui-input-inline">
        <button id="btn_save" class="layui-btn" style="display:none;">保存</button>
    </div>
</div>
<br />
<div id="from1" class="layui-form layui-form-pane">
    <div id="div1" class="layui-form">
        @*第一行*@
        <div class="layui-form-item">
            @*<label class="layui-form-label" style="width:130px">拜访ID：</label>
                <div class="layui-input-inline" style="width:130px">
                    <input id="BF_ID" type="text" required lay-verify="required" autocomplete="off" class="layui-input">
                </div>*@

            <label class="layui-form-label" style="width:130px">拜访类型：</label>
            <div class="layui-input-inline" style="width:130px">
                <select id="BF_type" lay-filter="BF_type" disabled>
                    <option value="0" selected="selected"></option>
                </select>
            </div>
        </div>

        @*第二行*@
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:130px">客户名称：</label>
            <div class="layui-input-inline" style="width:400px">
                <input id="KH_name" type="text" class="layui-input" disabled>
            </div>
            <label class="layui-form-label" style="width:130px">客户编号：</label>
            <div class="layui-input-inline" style="width:150px">
                <input id="KH_crmID" type="text" class="layui-input" disabled>
            </div>


            <label class="layui-form-label" style="width:130px">客户类型：</label>
            <div class="layui-input-inline" style="width:130px">
                <select id="KH_type" lay-filter="KH_type" disabled>
                    <option value="0" selected="selected"></option>
                </select>
            </div>

        </div>
        @*第三行*@
        <div class="layui-form-item">




        </div>
        @*第四行*@
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:130px">拜访地址：</label>
            <div class="layui-input-inline" style="width:400px">
                <input id="BF_address" type="text" class="layui-input">
            </div>

            <label class="layui-form-label" style="width:130px">拜访时间：</label>
            <div class="layui-input-inline" style="width:150px">
                <input id="BF_time" type="text" class="layui-input" disabled>
            </div>

            @*<label class="layui-form-label" style="width:130px">是否已签到：</label>
                <div class="layui-input-inline" style="width:130px">
                    <select id="isSignin" lay-filter="channel">
                        <option value="0" selected="selected"></option>
                        <option value="1">是</option>
                        <option value="2">否</option>
                    </select>
                </div>*@

            @*<label class="layui-form-label" style="width:120px">已拜访次数：</label>
                <div class="layui-input-inline" style="width:130px">
                    <input id="times" type="text" required lay-verify="required" autocomplete="off" class="layui-input">
                </div>*@

        </div>

        @*第六行*@
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:130px">联系人：</label>
            <div class="layui-input-inline" style="width:130px">
                <input id="lxr_name" type="text" required lay-verify="required" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label" style="width:130px">联系人电话：</label>
            <div class="layui-input-inline" style="width:130px">
                <input id="lxr_tel" type="text" required lay-verify="required" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label" style="width:130px">联系人职务：</label>
            <div class="layui-input-inline" style="width:150px">
                <select id="lxr_job" lay-filter="lxr_job" lay-search>
                    <option value="0" selected="selected"></option>
                </select>
            </div>

        </div>

        @*第七行*@
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:130px">拜访目的：</label>
            <div class="layui-input-inline" style="width:400px">
                <select id="BF_target" lay-filter="BF_target" lay-search>
                    <option value="0" selected="selected"></option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:130px">拜访结果：</label>
            <div class="layui-input-inline" style="width:400px">
                <select id="BF_result" lay-filter="BF_result" lay-search>
                    <option value="0" selected="selected"></option>
                </select>
            </div>
        </div>

        @*第八行*@
        <div class="layui-form-item">

            @*<label class="layui-form-label" style="width:130px">下次拜访内容：</label>
                <div class="layui-input-inline" style="width:400px">
                    <input id="BF_next_content" type="text" required lay-verify="required" autocomplete="off" class="layui-input">
                </div>

                <label class="layui-form-label" style="width:130px">下次拜访时间：</label>
                <div class="layui-input-inline" style="width:150px">
                    <input id="BF_next_time" type="text" required lay-verify="required" autocomplete="off" class="layui-input">
                </div>*@
        </div>

        @*第九行*@
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:130px">其他信息：</label>
            <div class="layui-input-inline" style="width:690px">
                <input id="other" type="text" required lay-verify="required" autocomplete="off" class="layui-input">
            </div>
        </div>

        @*第十行*@
        <div class="layui-form-item">

            <label class="layui-form-label" style="width:130px">拜访状态：</label>
            <div class="layui-input-inline" style="width:130px">
                <select id="BF_status" lay-filter="BF_status">
                    <option value="0" selected="selected"></option>
                    <option value="0">未完成</option>
                    <option value="1">已完成</option>
                </select>
            </div>

            @*<button type="button" class="layui-btn" id="btn_upload">
                    <i class="layui-icon">&#xe67c;</i>上传现场照片
                </button>
                <label id="txt"></label>*@
        </div>

        @*第十一行*@
        @*<div class="layui-form-item">
                <label class="layui-form-label" style="width:130px">备注：</label>
                <div class="layui-input-inline" style="width:670px">
                    <textarea id="remark" name="desc" placeholder="请输入内容" class="layui-textarea"></textarea>
                </div>
            </div>*@

        <hr class="layui-bg-black" />

        @*<table id="qudao6" lay-filter="qudao6"></table>
            <button id="insert_qudao" class="layui-btn">新增</button>*@
        <table id="img" lay-filter="img"></table>
        <button id="insert_img" class="layui-btn" style="display:none;">新增</button>



    </div>






</div>

@*新增渠道*@
<div id="006" class="layui-form" hidden>

    <div class="layui-form-item" hidden>
        <div class="layui-input-inline" style="width:150px;">
            <button id="btn_save_qudao" class="layui-btn" lay-filter="btn_save_qudao">保存</button>
        </div>
    </div>
    <br />
    <div class="layui-form-item">
        <label class="layui-form-label">渠道：</label>
        <div class="layui-input-inline" style="width:150px;">
            <select id="qudao006" lay-filter="qudao006" lay-search>
                <option value="0" selected="selected"></option>
            </select>
        </div>


    </div>

</div>


@* 新增图片 *@
<div id="div_newimg" class="layui-form" hidden>

    <div class="layui-form-item">
        <div class="layui-input-inline" style="width:150px;">
            <button id="btn_upload_img" class="layui-btn" lay-filter="btn_upload_img">确定</button>
        </div>
    </div>
    <br />
    <div class="layui-form-item">
        <label class="layui-form-label">图片类型：</label>
        <div class="layui-input-inline">
            <select id="newimg_type" lay-filter="newimg_type" lay-search>
                <option value="0" selected="selected"></option>
            </select>
        </div>

    </div>

</div>


<input id="staffid" hidden />

<script src="~/Scripts/jquery-1.8.2.js"></script>
<script>
    $(document).ready(function () {
        $("#staffid").val("@Staffid");

    });
</script>

<script src="~/Scripts/layui2.2.5/layui.all.js"></script>
