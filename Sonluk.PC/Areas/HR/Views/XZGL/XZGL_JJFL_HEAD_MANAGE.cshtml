@{
    ViewBag.Title = "奖金福利明细录入";
    Layout = "~/Views/Shared/_Layout_CRM.cshtml";
}
<script type="text/html" id="tpl_isaction">
    {{# if(d.ISACTION == 1){ }}
    正常
    {{# }else if(d.ISACTION == 2){ }}
    结案
    {{# }else { }}
    {{# } }}
</script>
<script type="text/javascript" src="~/Scripts/ztree/jquery.ztree.all.js"></script>
<script type="text/javascript" src="~/Scripts/ztree/selectTree.js"></script>
<script type="text/javascript" src="~/Scripts/layui2.2.5/extend/formSelects-v4.js"></script>
<link rel="stylesheet" type="text/css" href="~/Scripts/ztree/css/metroStyle/metroStyle.css">
<link rel="stylesheet" type="text/css" href="~/Scripts/ztree/plugin/css/index.css">
<link rel="stylesheet" type="text/css" href="~/Scripts/layui2.2.5/css/formSelects-v4.css">
<script type="text/html" id="barkh">
    <a class="layui-btn layui-btn-xs" lay-event="modify">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="delete">删除</a>
</script>
<span class="layui-breadcrumb" lay-separator=">">
    <a>HR薪资福利</a>
    <a><cite>奖金福利明细录入</cite></a>
</span>
<div class="layui-form">
    <div class="layui-form-item">
        <button class="layui-btn" onclick="location.href = '@Url.Action("XZGL_JJFL_MX_MANAGE", "XZGL")'">新增</button>
        <button class="layui-btn" id="btn_daochu">导出</button>
        @*<button class="layui-btn" onclick="location.href = '@Url.Action("XZGL_JJFL_MX", "XZGL")'">明细查询</button>*@
        <button class="layui-btn" id="XZGL_JJFL_MX">明细查询</button>
        <button class="layui-btn" id="btn_find">查询</button>
    </div>
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label1">公司：</label>
            <div class="layui-input-inline">
                <select id="find_gs" lay-filter="find_gs">
                    <option value="" selected="selected"></option>
                </select>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label1">部门：</label>
            <div class="layui-input-inline" style="width: 300px;" id="find_dept_father">
                <select id="find_dept_child" lay-filter="find_dept_child">
                    <option value="0" selected="selected"></option>
                </select>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">计发月份：</label>
            <div class="layui-input-inline">
                <input type="text" id="find_sbmonths" autocomplete="off" class="layui-input" readonly="readonly" value="@DateTime.Now.ToString("yyyy-MM")">
            </div>
            <div class="layui-form-mid">-</div>
            <div class="layui-input-inline">
                <input type="text" id="find_sbmonthe" autocomplete="off" class="layui-input" readonly="readonly" value="@DateTime.Now.ToString("yyyy-MM")">
            </div>
        </div>
    </div>
    <table class="layui-hide" id="tb_jjflname" lay-filter="tb_jjflname"></table>
</div>
<div id="div_jjflinfo" class="layui-form" hidden>
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label1" style="width: 100px;">公司：</label>
            <div class="layui-input-inline">
                <select id="jjflinfo_gs" lay-filter="jjflinfo_gs"></select>
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label1" style="width: 100px;">部门：</label>
            <div class="layui-input-inline">
                <select id="jjflinfo_dept" lay-filter="jjflinfo_dept" lay-search></select>
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label1" style="width: 100px;">计发月份：</label>
            <div class="layui-input-inline">
                <input type="text" id="jjflinfo_sbmonth" autocomplete="off" class="layui-input" readonly="readonly" value="@DateTime.Now.ToString("yyyy-MM")">
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label1" style="width: 100px;">奖金福利名称：</label>
            <div class="layui-input-inline">
                <select id="jjflinfo_jjflname" lay-filter="jjflinfo_jjflname"></select>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/HR/XZGL/XZGL_JJFL_HEAD_MANAGE")
}