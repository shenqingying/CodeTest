@{
    ViewBag.Title = "仓库权限维护";
    Layout = "~/Views/Shared/_Layout_CRM.cshtml";
}

@using Sonluk.PC.Areas.MES.Models;
@model Sonluk.PC.Areas.MES.Models.MODLEDataGather

<script type="text/html" id="bar">
    <a class="layui-btn layui-btn-xs" lay-event="edit">修改</a>
    <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="delete">删除</a>
</script>

<script type="text/html" id="indexTpl">
    {{d.LAY_TABLE_INDEX+1}}
</script>




<span class="layui-breadcrumb" lay-separator=">">
    <a>MES系统设置</a>
    <a><cite>仓库权限维护</cite></a>
</span>

<br />
<br />

<div id="from1" class="layui-form layui-form-pane">
    <div id="div1" class="layui-form">

        <div class="layui-form-item">
            <button id="btn_insert" class="layui-btn">新增</button>
            <button id="btn_cx" class="layui-btn">查询</button>
            <button id="btn_sap" class="layui-btn">ERP同步</button>
        </div>

        <div class="layui-form-item">

            <label class="layui-form-label">工厂：</label>
            <div class="layui-input-inline">
                <select id="cx_gc" lay-filter="cx_gc">
                    <option value="" selected="selected">请选择</option>
                    @for (int i = 0; i < Model.Sy_gc.Length; i++)
                    {
                        <option value="@Model.Sy_gc[i].GC">@Model.Sy_gc[i].GC-@Model.Sy_gc[i].GCMS</option>
                    }
                </select>
            </div>
        </div>

        <table class="layui-hide" id="tb_ck" lay-filter="tb_ck"></table>
    </div>
</div>

<div id="div_ck" class="layui-form" hidden>
    <br />
    @*<div class="layui-form-item">
        <label class="layui-form-label" style="width:130px">工厂：</label>
        <div class="layui-input-inline">
            <input id="gc_xg" type="text" autocomplete="off" class="layui-input" disabled>
        </div>
    </div>*@
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px">工厂：</label>
        <div class="layui-input-inline">
            <select id="gc_xg" lay-filter="gc_xg">
                <option value="" selected="selected">请选择</option>
                @for (int i = 0; i < Model.Sy_gc.Length; i++)
                {
                    <option value="@Model.Sy_gc[i].GC">@Model.Sy_gc[i].GC-@Model.Sy_gc[i].GCMS</option>
                }
            </select>
        </div>
    </div>
    <br />
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px">仓库名称：</label>
        <div class="layui-input-inline">
            <input id="ckname_xg" type="text" autocomplete="off" class="layui-input" placeholder="不可为空">
        </div>
    </div>
    <br />
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 10px;">
        <legend>仓库维护</legend>
    </fieldset>
    <table id="result_ck" lay-filter="result_ck"></table>
</div>

<div id="div_insert" class="layui-form" hidden>
    <br />

    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px">工厂：</label>
        <div class="layui-input-inline">
            <select id="gc" lay-filter="gc">
                <option value="" selected="selected">请选择（必选）</option>
                @for (int i = 0; i < Model.Sy_gc.Length; i++)
                {
                    <option value="@Model.Sy_gc[i].GC">@Model.Sy_gc[i].GC-@Model.Sy_gc[i].GCMS</option>
                }
            </select>
        </div>
    </div>

    <br />
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px">仓库名称：</label>
        <div class="layui-input-inline">
            <input id="ckname" type="text" autocomplete="off" class="layui-input" placeholder="不可为空">
        </div>
    </div>

</div>

@section scripts {
    @Scripts.Render("~/bundles/MES/System/DepotRole")
}