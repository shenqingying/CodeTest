@using Sonluk.UI.Model.S5.SY_DICTService
@{
    ViewBag.Title = "检查项目维护";
    Layout = "~/Views/Shared/_Layout_CRM.cshtml";

    FIVES_SY_DICT[] DICTLIST= ViewBag.DICT;
}
@using Sonluk.PC.Areas.FIVES;
@model Sonluk.PC.Areas.FIVES.Models.Model_FIVES_ALL
<script type="text/html" id="indexTpl">
    {{d.LAY_TABLE_INDEX+1}}
</script>
<script type="text/html" id="bar">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="delete">删除</a>
</script>
<span class="layui-breadcrumb" lay-separator>
    <a>5S系统管理</a>
    <a><cite>检查项目维护</cite></a>

</span>
<br />
<br />
<div class="layui-form layui-form-pane">
    <input type="hidden" value="@Url.Action("CheckDetails_Select", "System")" id="CheckDetails_Select" />
    <input type="hidden" value="@Url.Action("CheckDetails_Update", "System")" id="CheckDetails_Update" />
    <input type="hidden" value="@Url.Action("CheckDetails_Create", "System")" id="CheckDetails_Create" />
    <input type="hidden" value="@Url.Action("CheckDetails_Delete", "System")" id="CheckDetails_Delete" />
    <div class="layui-form-item">
        <button class="layui-btn" id="btn_create">新增</button>
        <button class="layui-btn" id="btn_select">查询</button>
    </div>
    
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">检查分类:</label>
            <div class="layui-input-inline">
                <select id="select_jcfl" lay-filter="select_jcfl" lay-search>
                    <option value="0" selected="selected">请选择</option>
                     @for (int i = 0; i < @DICTLIST.Length; i++)
                     {
                        <option value="@DICTLIST[i].DICID">@DICTLIST[i].DICNAME</option>
                     }                  
                </select>
            </div>
        </div>

    </div>
    <table id="table_checkdetails" lay-filter="table_checkdetails"></table>
    
</div>
<div id="div_addDetail" class="layui-form" hidden>
    <br />

    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">检查分类:</label>
            <div class="layui-input-inline" style="width:400px">
                <select id="select_jcfl_add" lay-filter="select_jcfl" lay-search>
                    <option value="0" selected="selected">请选择</option>
                    @for (int i = 0; i < @DICTLIST.Length; i++)
                    {
                        <option value="@DICTLIST[i].DICID">@DICTLIST[i].DICNAME</option>
                    }
                </select>
            </div>
        </div>

    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">检查名称:</label>
        <div class="layui-input-inline">
            <input id="input_jcmc" type="text" class="layui-input" style="width:400px">
        </div>
    </div>

</div>

@section scripts {
    @Scripts.Render("~/bundles/FIVES/System/CHECKDETAILS")
  
   
}

