@using Sonluk.UI.Model.CRM.COST_LKAPRODUCTService;
@{
    ViewBag.Title = "Select_KADTDP_cxPart";
    CRM_COST_LKAPRODUCT[] data = ViewBag.data;
}

@for (int i = 0; i < data.Length; i++)
{

    <div class="weui-form-preview">
        <div class="weui-form-preview__hd">
            <em class="weui-form-preview__value">@data[i].CPMC</em>
        </div>
        <div class="weui-form-preview__bd">
            <p>
                <label class="weui-form-preview__label">SAP产品编号</label>
                <span class="weui-form-preview__value">&nbsp;@data[i].SAPCP</span>
            </p>
            <p>
                <label class="weui-form-preview__label">包装数量</label>
                <span class="weui-form-preview__value">&nbsp;@data[i].BZNUM</span>
            </p>
         
        </div>
        <div class="weui-form-preview__ft">
            <button class="weui-form-preview__btn weui-form-preview__btn_primary" onclick="click_confirm(@Newtonsoft.Json.JsonConvert.SerializeObject(data[i]))">确认</button>
        
        </div>
    </div>
    <br />
}
@if (data.Length == 0)
{
    <label class="weui-form-preview__label">暂无数据</label>
    <br /><br />
}


