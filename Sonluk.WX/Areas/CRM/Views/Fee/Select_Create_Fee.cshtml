@using Sonluk.UI.Model.CRM.HG_DICTService
@{
    Layout = "~/Views/Shared/_Layout-weui.cshtml";
    ViewBag.Title = "制作费申请";

    CRM_HG_DICT[] ZZLX = ViewBag.ZZLX;
    CRM_HG_DICT[] SF = ViewBag.SF;
    CRM_HG_DICT[] CS = ViewBag.CS;
    CRM_HG_DICT[] KHLX = ViewBag.KHLX;
}

@*<button id="btn_submit_OA" class="layui-btn">提交至OA</button>*@


<div class="weui-btn-area">

    <button class="weui-btn weui-btn_primary" id="btn_insert" style="width:49%;display:initial;margin:0 0;">新增</button>
    <button class="weui-btn weui-btn_primary" id="btn_select" style="width:49%;display:initial;margin:0 0;float:right;">查询</button>

</div>

<div class="weui-cells weui-cells_form" style="margin-top:0;">




    <div class="layui-collapse">
        <div class="layui-colla-item">
            <h2 class="layui-colla-title">查询条件</h2>
            <div id="div_select_tiaojian" class="layui-colla-content" style="padding-right: 0px;">





                <div class="weui-cell weui-cell_select weui-cell_select-after">
                    <div class="weui-cell__hd">
                        <label for="" class="weui-label">制作类型：</label>
                    </div>
                    <div class="weui-cell__bd">
                        <select id="ZZLX" class="weui-select">

                            <option value="0" selected="selected">请选择</option>
                            @for (int i = 0; i < ZZLX.Length; i++)
                            {

                                <option value="@ZZLX[i].DICID">@ZZLX[i].DICNAME</option>

                            }

                        </select>
                    </div>
                </div>
                <div class="weui-cell weui-cell_select weui-cell_select-after">
                    <div class="weui-cell__hd">
                        <label for="" class="weui-label">省份：</label>
                    </div>
                    <div class="weui-cell__bd">
                        <select id="SF" class="weui-select">

                            <option value="0" selected="selected">请选择</option>
                            @for (int i = 0; i < SF.Length; i++)
                            {

                                <option value="@SF[i].DICID">@SF[i].DICNAME</option>

                            }

                        </select>
                    </div>
                </div>
                <div class="weui-cell weui-cell_select weui-cell_select-after">
                    <div class="weui-cell__hd">
                        <label for="" class="weui-label">城市：</label>
                    </div>
                    <div class="weui-cell__bd">
                        <select id="CS" class="weui-select">
                            <option value="0" selected="selected">请选择</option>
                        </select>
                    </div>
                </div>
                <div class="weui-cell weui-cell_select weui-cell_select-after">
                    <div class="weui-cell__hd">
                        <label for="" class="weui-label">客户类型：</label>
                    </div>
                    <div class="weui-cell__bd">
                        <select id="KHLX" class="weui-select">

                            <option value="0" selected="selected">请选择</option>
                            @for (int i = 0; i < KHLX.Length; i++)
                            {

                                <option value="@KHLX[i].DICID">@KHLX[i].DICNAME</option>

                            }

                        </select>
                    </div>
                </div>
                <div class="weui-cell weui-cell_select weui-cell_select-after">
                    <div class="weui-cell__hd">
                        <label for="" class="weui-label">状态：</label>
                    </div>
                    <div class="weui-cell__bd">
                        <select id="ISACTIVE" class="weui-select">
                            <option value="0">全部</option>
                            <option value="10" selected="selected">未提交</option>
                            <option value="20">审核中</option>
                            <option value="30">已审核</option>
                            <option value="40">核销审核中</option>
                            <option value="60">核销已审核</option>
                        </select>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>





<div id="result" style="margin:0 10px">
</div>


@section scripts {
    @Scripts.Render("~/bundles/CRM/Fee/Select_Create_Fee")
}


