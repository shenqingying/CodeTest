@using Sonluk.UI.Model.CRM.HG_DICTService;
@{
    Layout = "~/Views/Shared/_Layout-weui.cshtml";
    Session["TITLENAME"] = "KA堆头海报费用申请";

    CRM_HG_DICT[] PAYWAY = ViewBag.PAYWAY;
    CRM_HG_DICT[] CXY = ViewBag.CXY;
}

<div class="weui-btn-area">
    <button class="weui-btn weui-btn_primary" id="btn_save" style="width:100%;display: initial;margin: 0 0;">保存</button>
</div>

<div class="weui-cells weui-cells_form" style="margin-top:0;">


    <div id="div_clickkh">
        <div class="weui-cell">
            <div class="weui-cell__hd"><label class="weui-label">客户名称：</label></div>
            <div class="weui-cell__bd weui-cell_primary">
                <input id="mc" class="weui-input" type="text" placeholder="" readonly>
            </div>
        </div>

        <div class="weui-cell">
            <div class="weui-cell__hd"><label class="weui-label">客户编号：</label></div>
            <div class="weui-cell__bd weui-cell_primary">
                <input id="crmid" class="weui-input" type="text" placeholder="" readonly>
            </div>
        </div>

        <div class="weui-cell">
            <div class="weui-cell__hd"><label class="weui-label">客户SAP编号：</label></div>
            <div class="weui-cell__bd weui-cell_primary">
                <input id="sapsn" class="weui-input" type="text" placeholder="" readonly>
            </div>
        </div>
    </div>

    <div class="weui-cell weui-cell_select weui-cell_select-after">
        <div class="weui-cell__hd">
            <label for="" class="weui-label">合同年份：</label>
        </div>
        <div class="weui-cell__bd">
            <select id="year" class="weui-select">
                <option value="">请选择</option>
                @for (int i = @DateTime.Now.Year - 10; i <= @DateTime.Now.Year + 10; i++)
                {
                    if (i == DateTime.Now.Year)
                    {
                        <option value="@i" selected="selected">@(i)年</option>
                    }
                    else
                    {
                        <option value="@i">@(i)年</option>
                    }

                }
            </select>
        </div>
    </div>



    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">活动开始时间：</label></div>
        <div class="weui-cell__bd weui-cell_primary">
            <input id="begin" class="weui-input" type="date" placeholder="">
        </div>
    </div>

    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">活动结束时间：</label></div>
        <div class="weui-cell__bd weui-cell_primary">
            <input id="end" class="weui-input" type="date" placeholder="">
        </div>
    </div>

    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">最晚发货时间：</label></div>
        <div class="weui-cell__bd weui-cell_primary">
            <input id="fahuo" class="weui-input" type="date" placeholder="">
        </div>
    </div>

    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">预计活动期间销售：</label></div>
        <div class="weui-cell__bd weui-cell_primary">
            <input id="yjxs" class="weui-input" type="text" placeholder="">
        </div>
    </div>

    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">日常月均销售：</label></div>
        <div class="weui-cell__bd weui-cell_primary">
            <input id="rcyjxs" class="weui-input" type="text" placeholder="">
        </div>
    </div>

    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">档期：</label></div>
        <div class="weui-cell__bd weui-cell_primary">
            <input id="dq" class="weui-input" type="text" placeholder="">
        </div>
    </div>

    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">促销级别：</label></div>
        <div class="weui-cell__bd weui-cell_primary">
            <input id="cxjb" class="weui-input" type="text" placeholder="">
        </div>
    </div>

    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">活动方案说明：</label></div>
        <div class="weui-cell__bd weui-cell_primary">
            <input id="hdfasm" class="weui-input" type="text" placeholder="">
        </div>
    </div>

    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">备注：</label></div>
        <div class="weui-cell__bd weui-cell_primary">
            <input id="beiz" class="weui-input" type="text" placeholder="">
        </div>
    </div>


</div>




<div id="div_jump" class="layui-form" hidden>

    <button class="weui-btn weui-btn_primary" id="btn_cxkh">查询</button>

    <div class="layui-collapse">
        <div class="layui-colla-item">
            <h2 class="layui-colla-title">查询条件</h2>
            <div id="div_select_tiaojian" class="layui-colla-content layui-show">

                <div class="weui-cell">
                    <div class="weui-cell__hd"><label class="weui-label">客户名称：</label></div>
                    <div class="weui-cell__bd weui-cell_primary">
                        <input id="KH_name" class="weui-input" type="text" placeholder="">
                    </div>
                </div>

                <div class="weui-cell">
                    <div class="weui-cell__hd"><label class="weui-label">客户编号：</label></div>
                    <div class="weui-cell__bd weui-cell_primary">
                        <input id="KH_ID" class="weui-input" type="text" placeholder="">
                    </div>
                </div>




            </div>
        </div>
    </div>

    <div id="div_kh">

    </div>





    <br />

</div>





<input id="khid" hidden />


@section scripts {
    @Scripts.Render("~/bundles/CRM/Fee/Insert_KADT")
}