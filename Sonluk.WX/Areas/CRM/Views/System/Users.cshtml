@{
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "用户列表";
    Session["TITLENAME"] = "用户列表";
}







<div id="from1">
    <div id="div1">

        <div class="layui-form-item" style="width:100%;margin:0;background-color:#009688">
            <button id="btn_cx" class="layui-btn" lay-submit lay-filter="formDemo" style="width:100%">查询</button>



        </div>


        <div class="layui-collapse">
            <div class="layui-colla-item">
                <h2 class="layui-colla-title">查询条件</h2>
                <div id="div_select_tiaojian" class="layui-colla-content layui-show" style="padding-right: 0px;">





                    <div class="layui-form-item">
                        <label class="layui-form-label" style="width:100px; text-align:right;">姓名：</label>
                        <div class="layui-input-block" style="margin-left:110px; left:-1px;">
                            <input id="cx_staffname" type="text" name="title" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label" style="width:100px; text-align:right;">工号：</label>
                        <div class="layui-input-block" style="margin-left:110px; left:-1px;">
                            <input id="cx_staffno" type="text" name="title" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label" style="width:100px; text-align:right;">帐号：</label>
                        <div class="layui-input-block" style="margin-left:110px; left:-1px;">
                            <input id="cx_staffuser" type="text" name="title" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label" style="width:100px;text-align:right;">系统来源：</label>
                        <div class="layui-input-block" style="margin-left:110px; left:-1px;">
                            <select id="cx_allsys" lay-filter="cx_allsys">
                                <option value="0" selected="selected">CRM</option>
                                <option value="1">全部系统</option>
                            </select>
                        </div>

                    </div>
                    
                    


                    

                </div>
            </div>
        </div>
        <br /><br />

        <div id="div_result" style="margin:0 10px">

        </div>


    </div>






</div>


<div id="div_users" class="layui-form" hidden>
    <br />
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:100px;">姓名：</label>
        <div class="layui-input-block">
            <input id="staffname" type="text" class="layui-input" disabled>
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label" style="width:100px;">工号：</label>
        <div class="layui-input-block">
            <input id="staffno" type="text" class="layui-input" disabled>
        </div>
    </div>

    

    <div class="layui-form-item">
        <label class="layui-form-label" style="width:100px;">登录名：</label>
        <div class="layui-input-block">
            <input id="loginname" type="text" class="layui-input" disabled>
        </div>
    </div>
    <input hidden style="display:none">
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:100px;">新密码：</label>
        <div class="layui-input-block">
            <input id="password" type="text" class="layui-input" placeholder="不填则不作修改">
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label" style="width:100px;">客户类型权限：</label>
        <div class="layui-input-block">
            <select id="KHtype_Power" lay-filter="KHtype_Power" lay-ignore>
                <option value="0" selected="selected"></option>
                @for (int i = 0; i < Model.LongLength; i++)
                {
                    <option value="@Model[i].STAFFKHLXID">@Model[i].STAFFKHLXMC</option>
                }
            </select>
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label" style="width:100px;">是否锁定：</label>
        <div class="layui-input-block">
            <select id="islock" lay-filter="islock" lay-ignore>
                <option value="1">是</option>
                <option value="0" selected="selected">否</option>
            </select>
        </div>
    </div>

    

</div>


@section scripts {
    @Scripts.Render("~/bundles/CRM/System/Users")
}