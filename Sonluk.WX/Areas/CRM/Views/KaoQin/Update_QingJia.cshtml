@{
    ViewBag.Title = "请假申请";
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    Session["TITLENAME"] = "请假申请";

    string Staffid = "";
    if (Session["STAFFID"] != null)
    {
        Staffid = Session["STAFFID"].ToString();
    }
}

<script type="text/html" id="tb_area">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="delete">删除</a>
</script>

<h2 id="h1" style="margin:0 10px"></h2>
<h2 id="h2" style="margin:0 10px"></h2>


<hr class="layui-bg-black" />



<div id="004" class="layui-form">
    <h2 class="layui-colla-title" id="htitle">修改请假申请</h2>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:90px;">工号：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <input id="workID" type="text" placeholder="必填" autocomplete="off" class="layui-input">
        </div>

        <label class="layui-form-label" style="width:90px;">姓名：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <input id="name" type="text" placeholder="必填" autocomplete="off" class="layui-input">
        </div>

        <label class="layui-form-label" style="width:90px;">性别：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <select id="sex" lay-filter="sex" lay-ignore>
                <option value="0" selected="selected">请选择</option>
                <option value="1">男</option>
                <option value="2">女</option>
            </select>
        </div>

        <label class="layui-form-label" style="width:90px;">部门：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <select id="department" lay-filter="department" lay-ignore>
                <option value="0" selected="selected">请选择</option>
            </select>
        </div>

    </div>
    @* 第二行 *@
    <div class="layui-form-item">


        <label class="layui-form-label" style="width:90px;">请假类别：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <select id="qingjia_type" lay-filter="qingjia_type" lay-ignore>
                <option value="0" selected="selected">请选择</option>
            </select>
        </div>

        <label class="layui-form-label" style="width:90px;">去往何处：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <input id="where" type="text" placeholder="必填" autocomplete="off" class="layui-input">
        </div>

    </div>
    @* 第三行 *@
    <div class="layui-form-item">

        <label class="layui-form-label" style="width:90px;">请假日期：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <input id="time_open" type="date" placeholder="必填" autocomplete="off" class="layui-input" style="vertical-align:middle">

        </div>
        <label class="layui-form-label" style="width:90px;">时间：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <select id="clock_open" lay-filter="clock_open" lay-ignore>
                <option value="0" selected="selected">请选择</option>
                <option value="08:00:00">8:00</option>
                <option value="12:00:00">12:00</option>
            </select>
        </div>

        <label class="layui-form-label" style="width:90px;">至：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <input id="time_end" type="date" placeholder="必填" autocomplete="off" class="layui-input" style="vertical-align:middle">
        </div>
        <label class="layui-form-label" style="width:90px;">时间：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <select id="clock_end" lay-filter="clock_end" lay-ignore>
                <option value="0" selected="selected">请选择</option>
                <option value="12:00:00">12:00</option>
                <option value="17:00:00">17:00</option>
            </select>
        </div>
    </div>


    <div class="layui-form-item">
        <label class="layui-form-label" style="width:90px;">共计天数：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <input id="total" type="text" autocomplete="off" class="layui-input" disabled>
        </div>



    </div>

    @* 第四行 *@
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:90px;">备注：</label>
        <div class="layui-input-block" style="margin-left: 120px;">
            <textarea id="remark" name="desc" placeholder="请输入内容" class="layui-textarea"></textarea>
        </div>
    </div>


    <br />

</div>
<br />
    <div class="layui-form-item" style="width:100%;margin:0;background-color:#009688">
        
        <button id="btn_save" class="layui-btn" style="width:47%;margin-left:0;">保存</button>
        |
        <button id="btn_submit" class="layui-btn" style="width:47%;margin-left:0;">提交OA</button>
    </div>

<input id="action_status" hidden value="insert" />
<input id="zibiao_id" hidden />

<input id="staffid" hidden />

<script>
    $(document).ready(function () {
        $("#staffid").val("@Staffid");
    });
</script>

@section scripts {
    @Scripts.Render("~/bundles/CRM/KaoQin/Update_QingJia")
}