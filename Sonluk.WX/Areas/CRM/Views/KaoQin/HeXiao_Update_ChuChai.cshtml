                <input id="sj_time_open" type="date" placeholder="必填" autocomplete="off" class="layui-input" disabled>
            </div>
            <label class="layui-form-label" style="width:120px;">时间：</label>
            <div class="layui-input-block">
                <select id="sj_clock_open" lay-filter="sj_clock_open" lay_ignore disabled>
                    <option value="0" selected="selected"></option>
                    <option value="08:00:00">8:00</option>
                    <option value="12:00:00">12:00</option>
