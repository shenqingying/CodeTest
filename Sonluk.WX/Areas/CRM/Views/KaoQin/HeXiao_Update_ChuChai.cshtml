@{
    ViewBag.Title = "编辑出差签到及评估";
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    Session["TITLENAME"] = "编辑出差签到及评估";

    string Staffid = "";
    if (Session["STAFFID"] != null)
    {
        Staffid = Session["STAFFID"].ToString();
    }

    string state = "";
    string appid = "";
    if (Session["state"] != null)
    {
        state = Session["state"].ToString();
        if (Session["state"] == "WX")
        {
            appid = System.Configuration.ConfigurationManager.AppSettings["AppID"];
        }
        else if (Session["state"] == "QY")
        {
            appid = System.Configuration.ConfigurationManager.AppSettings["CorpID"];
        }

    }
}

<h2 id="h1" style="margin:0 10px"></h2>
<h2 id="h2" style="margin:0 10px"></h2>


<hr class="layui-bg-black" />



<div id="div_jump" class="layui-form">
    <div id="div1" class="layui-form">

        <div class="layui-form-item">


            <label class="layui-form-label" style="width:130px;text-align:right;">出差人：</label>
            <div class="layui-input-block">
                <input id="name" type="text" autocomplete="off" class="layui-input" disabled>
            </div>

            <label class="layui-form-label" style="width:130px;text-align:right;">部门：</label>
            <div class="layui-input-block">
                <select id="department" lay-filter="department" disabled>
                    <option value="0" selected="selected"></option>
                </select>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label" style="width:130px;text-align:right;">出差地点：</label>
            <div class="layui-input-block">
                <input id="dd" type="text" placeholder="必填" autocomplete="off" class="layui-input" disabled>
            </div>

        </div>
        @* 第二行 *@
