@{
    ViewBag.Title = "考勤签到";
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    Session["TITLENAME"] = "考勤签到";
    string staffid = "";
    if (Session["STAFFID"] != null)
    {
        staffid = Session["STAFFID"].ToString();
    }

    string state = "";
    string appid = "";
    if (Session["state"] != null)
    {
        state = Session["state"].ToString();
        if (Session["state"] == "WX")
        {
            appid = System.Configuration.ConfigurationManager.AppSettings["AppID"];
        }
        else if (Session["state"] == "QY")
        {
            appid = System.Configuration.ConfigurationManager.AppSettings["CorpID"];
        }

    }



}



<div class="layui-form" style="position: relative;">
    @*<div class="layui-form-item" style="margin-top:20%">
            <label id="lb_time" class="layui-form-label" style="width:80%; text-align:center;font-size:16px;margin:auto 10px;"></label>
        </div>*@

    <div class="layui-form-item" style="margin-top:10%">
        <table border="0" width="100%" style="border-collapse:separate; border-spacing:0px 20px;">
            <tr>
                <td width="50">
                    <label id="lb_dangqianshijian" style="margin-left:10px;font-size:14px;float:right;" hidden>当前时间:</label>
                </td>
                <td width="100">
                    <label id="lb_time" style="text-align:center;font-size:14px;margin:auto 10px;"></label>
                </td>
            </tr>

            <tr>
                <td width="50">
                    <label id="lb_dangqianweizhi" style="margin-left:10px;font-size:14px;float:right;" hidden>当前位置:</label>
                </td>
                <td width="100">
                    <label id="address" style="text-align:center;font-size:14px;margin:auto 10px;"></label>
                </td>
            </tr>

            <tr>
                <td width="50">
                    <div id="div_zuijin">
                        <label id="lb_zuijin" style="margin-left:10px;font-size:14px;float:right;" hidden>最近考勤点:</label>
                    </div>
                </td>
                <td width="100">
                    <label id="lb_tips2" style="text-align:center;font-size:14px;margin:auto 10px;"></label>
                </td>
            </tr>
            <tr>
                <td>
                    <div id="div_juli">
                        <label id="lb_jilu" style="margin-left:10px;font-size:14px;float:right;" hidden>距离:</label>
                    </div>
                </td>
                <td>
                    <label id="lb_tips3" style="text-align:center;font-size:20px;margin:auto 10px;"></label>
                </td>
            </tr>
        </table>

    </div>


    <div class="layui-form-item" style="margin-top:5%;text-align:center;">
        <label id="lb_tips" class="layui-form-label" style="width:100%; text-align:center;font-size:16px;"></label>
    </div>


    <div style="width:50%;margin-top:5%;text-align:center;margin-left: auto; margin-right: auto;">
        <button id="btn_save_daka" class="layui-btn" style="width:100%;height:50px;font-size:18px" disabled>打卡</button>
    </div>


    <div class="layui-form-item" style="margin-top:5%">
        <label id="lb_tips4" class="layui-form-label" style="width:100%; text-align:center;font-size:16px;"></label>
    </div>

    <div class="layui-form-item" style="margin-top:5%">
        <label class="layui-form-label" style="width:100%; text-align:center;font-size:16px;color:red;">出差请在出差签到及评估界面进行签到</label>
    </div>

</div>


<input id="staffid" hidden />
<input id="state" hidden />
<input id="appid" hidden />

<input id="lat" hidden />
<input id="lon" hidden />
<input id="province" hidden />
<input id="city" hidden />

<input id="KQDZID" hidden />
<input id="KQDZ" hidden />
<input id="KQRC" hidden />
<input id="juli" hidden />

<input id="distance_model" hidden />


<script>
    $(document).ready(function () {
        $("#staffid").val("@staffid");
        $("#state").val("@state");
        $("#appid").val("@appid");
    });
</script>

<script src="~/Scripts/jquery-1.8.2.js"></script>

