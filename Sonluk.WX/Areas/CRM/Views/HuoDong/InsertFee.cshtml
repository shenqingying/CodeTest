@{
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "招待费申请";
    Session["TITLENAME"] = "招待费申请";

    string Staffid = "";
    if (Session["STAFFID"] != null)
    {
        Staffid = Session["STAFFID"].ToString();
    }

}




    <div id="div1">

        <div class="layui-form-item" style="width:100%;margin:0;background-color:#009688;">
            
                <button id="btn_save" class="layui-btn" style="width:100%;">保存</button>
          


        </div>

       <br />


        <div class="layui-form-item">
            <label class="layui-form-label" style="width:100px; text-align:right;">申请人：</label>
            <div class="layui-input-block">
                <input id="staff" type="text" placeholder="必填" autocomplete="off" class="layui-input" disabled>
            </div>

            <label class="layui-form-label" style="width:100px; text-align:right;">申请部门：</label>
            <div class="layui-input-block">
                <select id="department" lay-filter="department" disabled>
                    <option value="0" selected="selected"></option>
                </select>
            </div>

            <label class="layui-form-label" style="width:100px; text-align:right;">申请时间：</label>
            <div class="layui-input-block">
                <input id="apply_time" type="text" placeholder="当前时间" autocomplete="off" class="layui-input" disabled>
            </div>

        </div>
        @* 第二行 *@
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:100px; text-align:right;">招待日期：</label>
            <div class="layui-input-block">
                <input id="ZD_time" type="date" placeholder="必填" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label" style="width:100px; text-align:right;">客户名称：</label>
            <div class="layui-input-block">
                <input id="company" type="text" placeholder="" autocomplete="off" class="layui-input">
            </div>

        </div>
        @* 第三行 *@
        <div class="layui-form-item">

            <label class="layui-form-label" style="width:100px; text-align:right;">客户姓名：</label>
            <div class="layui-input-block">
                <input id="KH_name" type="text" placeholder="" autocomplete="off" class="layui-input">

            </div>
        </div>
        @* 第四行 *@
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:100px; text-align:right;">招待人数：</label>
            <div class="layui-input-block">
                <input id="ZD_count" type="number" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label" style="width:100px; text-align:right;">陪客人数：</label>
            <div class="layui-input-block">
                <input id="PK_count" type="number" autocomplete="off" class="layui-input">
            </div>
        </div>

        @* 第五行 *@
        <div class="layui-form-item">

            <label class="layui-form-label" style="width:100px; text-align:right;">招待事由：</label>
            <div class="layui-input-block">
                <textarea id="reason" placeholder="请输入内容" class="layui-textarea"></textarea>
            </div>
        </div>

        @* 第六行 *@
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:100px; text-align:right;">预计金额：</label>
            <div class="layui-input-block">
                <input id="fee_small" type="text" autocomplete="off" class="layui-input">
            </div>

            <label class="layui-form-label" style="width:100px; text-align:right;">大写：</label>
            <div class="layui-input-block">
                <input id="fee_big" type="text" autocomplete="off" class="layui-input" disabled>
            </div>
        </div>


        <br />


    </div>


<input id="staffid" hidden />

<script>
    $(document).ready(function () {
        $("#staffid").val("@Staffid");

    });
</script>

@section scripts {
    @Scripts.Render("~/bundles/CRM/HuoDong/InsertFee")
}
