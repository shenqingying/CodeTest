@{
    ViewBag.Title = "拜访管理";
    Session["TITLENAME"] = "拜访管理";
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    string Staffid = "";
    if (Session["STAFFID"] != null)
    {
        Staffid = Session["STAFFID"].ToString();
    }
}



<script type="text/html" id="indexTpl">
    {{d.LAY_TABLE_INDEX+1}}
</script>








<div id="form1" class="layui-form">
    <button id="btn_cx" class="layui-btn" style="width:100%;">查询</button>
    <br /><br />
    <h2 class="layui-colla-title">查询条件</h2>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:110px">拜访人员：</label>
        <div class="layui-input-block">
            <select id="ddl_staff" lay-filter="ddl_staff" lay-ignore>
                <option value="0" selected="selected">全部</option>
            </select>
        </div>

        <label class="layui-form-label" style="width:110px">拜访类型：</label>
        <div class="layui-input-block">
            <select id="BF_type" lay-filter="BF_type" lay-ignore>
                <option value="0" selected="selected"></option>
            </select>
        </div>

        <label class="layui-form-label" style="width:110px">拜访状态：</label>
        <div class="layui-input-block">
            <select id="status" lay-filter="status" lay-ignore>
                <option value="100" selected="selected">全部</option>
                <option value="0">未完成</option>
                <option value="1">已完成</option>
            </select>
        </div>

    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:110px">客户名称：</label>
        <div class="layui-input-block">
            <input id="KH_name" type="text" autocomplete="off" class="layui-input">
        </div>

        <label class="layui-form-label" style="width:110px">客户编号：</label>
        <div class="layui-input-block">
            <input id="KH_crmID" type="text" autocomplete="off" class="layui-input">
        </div>

        <label class="layui-form-label" style="width:110px">客户类型：</label>
        <div class="layui-input-block">
            <select id="KH_type" lay-filter="KH_type" lay-ignore>
                <option value="0" selected="selected"></option>
            </select>
        </div>





    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:110px">开始日期：</label>
        <div class="layui-input-block">
            <input id="begin_time" type="date" autocomplete="off" class="layui-input">
        </div>

        <label class="layui-form-label" style="width:110px">结束日期：</label>
        <div class="layui-input-block">
            <input id="end_time" type="date" autocomplete="off" class="layui-input">
        </div>



        <br />



    </div>
    <hr class="layui-bg-black" />

    <div id="div_result" style="margin:0 10px;"></div>
</div>
<br /><br /><br />
<input id="staffid" hidden />

<script src="~/Scripts/jquery-1.8.2.js"></script>
<script>
    $(document).ready(function () {
        $("#staffid").val("@Staffid");

    });
</script>

<script src="~/Scripts/layui2.2.5/layui.all.js"></script>
@section scripts {
    @Scripts.Render("~/bundles/CRM/BaiFang/BaiFangManage")
}
