@{
    ViewBag.Title = "送货数量";
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    Session["TITLENAME"] = "送货数量";
}



<h2 id="h1" style="margin:0 10px"></h2>
<h2 id="h2" style="margin:0 10px"></h2>


<hr class="layui-bg-black" />


<div id="div_result" style="margin:0 10px">

</div>
<br />
<hr class="layui-bg-black" />
<br />
<div id="003" hidden>

    <h2 class="layui-colla-title" id="htitle">新增送货数量</h2>

    <br />
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px">累计送货次数：</label>
        <div class="layui-input-block">
            <input id="songhuo_cishu012" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>

    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px">单次送货数量(只)：</label>
        <div class="layui-input-block">
            <input id="songhuo_counts012" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px">送货日期：</label>
        <div class="layui-input-block">
            <input id="songhuo_time012" type="date" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px">备注：</label>
        <div class="layui-input-block">
            <input id="remark012" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>

    </div>
    <div class="layui-form" style="width:100%;">
        <div class="layui-form-item" style="margin:0">
            <br />
            <button id="btn_save_songhuo" class="layui-btn" lay-filter="btn_save_songhuo" style="width:49%;">保存</button>

            <button id="btn_nosave_songhuo" class="layui-btn layui-btn-danger" lay-filter="btn_nosave_songhuo" style="width:49%;margin: 0;" hidden>取消</button>
        </div>
    </div>
</div>

<input id="action_status" hidden value="insert" />
<input id="zibiao_id" hidden />




@section scripts {
    @Scripts.Render("~/bundles/CRM/KeHu/SongHuo")
}