@{
    ViewBag.Title = "直销商销售";
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    Session["TITLENAME"] = "直销商销售";
}



<h2 id="h1" style="margin:0 10px"></h2>
<h2 id="h2" style="margin:0 10px"></h2>


<hr class="layui-bg-black" />


<div id="div_result" style="margin:0 10px">

</div>
<br />
<hr class="layui-bg-black" />
<br />
<div id="003" hidden>

    <h2 class="layui-colla-title" id="htitle">新增直销商销售</h2>

    <br />
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:120px">销售类别：</label>
        <div class="layui-input-block">
            <select id="zhixiao_type13" lay-filter="zhixiao_type13" lay-ignore>
                <option value="0" selected="selected"></option>
            </select>
        </div>

    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:120px">年份：</label>
        <div class="layui-input-block">
            <select id="zhixiao_year13" lay-filter="zhixiao_year13" lay-ignore>
                <option value="0" selected="selected"></option>
            </select>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:120px">销售额(万元)：</label>
        <div class="layui-input-block">
            <input id="zhixiao_howmuch13" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form" style="width:100%;">
        <div class="layui-form-item" style="margin:0">
            <br />
            <button id="btn_save_xiaoshou" class="layui-btn" lay-filter="btn_save_xiaoshou" style="width:49%;">保存</button>

            <button id="btn_nosave_xiaoshou" class="layui-btn layui-btn-danger" lay-filter="btn_nosave_xiaoshou" style="width:49%;margin: 0;" hidden>取消</button>
        </div>
    </div>
</div>

<input id="action_status" hidden value="insert" />
<input id="zibiao_id" hidden />




@section scripts {
    @Scripts.Render("~/bundles/CRM/KeHu/XiaoShou")
}