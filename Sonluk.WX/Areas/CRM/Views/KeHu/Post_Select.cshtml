@{
    ViewBag.Title = "邮寄地址";
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    Session["TITLENAME"] = "邮寄地址";
}



<h2 id="h1" style="margin:0 10px"></h2>
<h2 id="h2" style="margin:0 10px"></h2>


<hr class="layui-bg-black" />


<div id="div_result" style="margin:0 10px">

</div>
<br />
<hr class="layui-bg-black" />
<br />
<div id="003" hidden>

    <h2 class="layui-colla-title" id="htitle">新增邮寄地址</h2>

    <br />
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:120px">邮寄地址：</label>
        <div class="layui-input-block">
            <input id="address003" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>

    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:120px">邮编：</label>
        <div class="layui-input-block">
            <input id="postalcode003" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:120px">收件人：</label>
        <div class="layui-input-block">
            <input id="name003" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:120px">收件人联系方式：</label>
        <div class="layui-input-block">
            <input id="tel003" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>

    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:120px">备注：</label>
        <div class="layui-input-block">
            <input id="remark003" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>

    </div>


    <div class="layui-form" style="width:100%;">
        <div class="layui-form-item" style="margin:0">
            <br />
            <button id="btn_save_post" class="layui-btn" lay-filter="btn_save_post" style="width:49%;">保存</button>

            <button id="btn_nosave_post" class="layui-btn layui-btn-danger" lay-filter="btn_nosave_post" style="width:49%;margin: 0;" hidden>取消</button>
        </div>
    </div>

</div>

<input id="action_status" hidden value="insert" />
<input id="zibiao_id" hidden />




@section scripts {
    @Scripts.Render("~/bundles/CRM/KeHu/Post")
}