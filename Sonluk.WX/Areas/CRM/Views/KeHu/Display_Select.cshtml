@{
    ViewBag.Title = "陈列信息";
    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    Session["TITLENAME"] = "陈列信息";
}

<script type="text/html" id="tb_area">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="delete">删除</a>
</script>

<h2 id="h1" style="margin:0 10px"></h2>
<h2 id="h2" style="margin:0 10px"></h2>


<hr class="layui-bg-black" />


<div id="div_result" style="margin:0 10px">

</div>
<br />
<hr class="layui-bg-black" />
<br />
<div id="004" hidden>

    <h2 class="layui-colla-title" id="htitle">新增陈列信息</h2>
    <br />
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px;text-align:right;">陈列类型：</label>
        <div class="layui-input-block">
            <select id="displaytype004" lay-filter="displaytype004">
                <option value="1" selected="selected">主陈列</option>
                <option value="2">二次陈列</option>
            </select>
        </div>

    </div>
    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px;text-align:right;">陈列方式：</label>
        <div class="layui-input-block">
            <select id="displayway004" lay-filter="displayway004">
                <option value="0" selected="selected"></option>
            </select>
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px;text-align:right;">陈列归属开始日期：</label>
        <div class="layui-input-block">
            <input id="display_time004" type="date" placeholder="" autocomplete="off" class="layui-input">
        </div>

    </div>

    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px;text-align:right;">陈列归属结束日期：</label>
        <div class="layui-input-block">
            <input id="display_endtime004" type="date" placeholder="" autocomplete="off" class="layui-input">
        </div>

    </div>

    <div class="layui-form-item" hidden>
        <label class="layui-form-label" style="width:130px;text-align:right;">双鹿陈列道具：</label>
        <div class="layui-input-block">
            <select id="displayitem004" lay-filter="displayitem004">
                <option value="2" selected="selected">无</option>
                <option value="1">有</option>
            </select>
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label" style="width:130px;text-align:right;">备注：</label>
        <div class="layui-input-block">
            <input id="remark004" type="text" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
        </div>

    </div>
    <div class="layui-form" style="width:100%;">
        <div class="layui-form-item" style="margin:0">
            <br />
            <button id="btn_save_display" class="layui-btn" lay-filter="btn_save_display" style="width:49%;">保存</button>

            <button id="btn_nosave_display" class="layui-btn layui-btn-danger" lay-filter="btn_nosave_display" style="width:49%;margin: 0;" hidden>取消</button>
        </div>
    </div>
</div>

<input id="action_status" hidden value="insert" />
<input id="zibiao_id" hidden />




@section scripts {
    @Scripts.Render("~/bundles/CRM/KeHu/Display")
}