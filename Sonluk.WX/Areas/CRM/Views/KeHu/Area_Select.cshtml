    Layout = "~/Areas/CRM/Views/Shared/_Layout.cshtml";
    Session["TITLENAME"] = "管辖区域";
}

<script type="text/html" id="indexTpl">
    {{d.LAY_TABLE_INDEX+1}}
</script>

<script type="text/html" id="area_Tpl">
    {{# if(d.GXQYLX == 1){ }}
    全国
    {{# }else if(d.GXQYLX == 2){ }}
    省份
    {{# }else if(d.GXQYLX == 3){ }}
