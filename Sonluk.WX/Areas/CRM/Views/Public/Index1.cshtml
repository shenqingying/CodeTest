@using Sonluk.UI.Model.CRM.CRM_LoginService;
@{
    ViewBag.Title = "首页";
    Layout = "~/Areas/CRM/Views/Shared/_Layout_PDA.cshtml";

    CRM_JURISDICTION_GROUP[] MenuInfo = null;
    if (Session["MENUINFO"] != null)
    {
        MenuInfo = (CRM_JURISDICTION_GROUP[])Session["MENUINFO"];
    }

    string state = "";
    if(Session["state"] != null)
    {
        state = Session["state"].ToString();
    }

    string NetPath = System.Configuration.ConfigurationManager.AppSettings["NETPATH"];
}
