<div class="layui-carousel" id="banner">
    <div carousel-item>
        <div>
            <img src="~/Image/1.jpg" style="width:100%" />
        </div>
        <div>
            <img src="~/Image/2.jpg" style="width:100%" />
        </div>
        <div>
            <img src="~/Image/3.jpg" style="width:100%" />
        </div>
    </div>
</div>

@if (MenuInfo != null)
{
    for (int i = 0; i < MenuInfo.Length; i++)
    {
        <fieldset class="layui-elem-field layui-field-title">
            <legend>@MenuInfo[i].CRM_HG_RIGHTGROUP.RGROUPNAME</legend>
            <div class="layui-field-box">
                @if (MenuInfo[i].CRM_HG_RIGHTList.Length > 0)
                {
                    CRM_HG_RIGHT[] child = MenuInfo[i].CRM_HG_RIGHTList;
                    for (int j = 0; j < child.Length; j++)
                    {
                        if (string.IsNullOrEmpty(child[j].RIGHTADD) == false)
                        {
                            string[] childurl = child[j].RIGHTADD.Split(',');
                            string src = NetPath + "ico/" + child[j].IMAGELJ;
                            <div class="layui-col-xs4 layui-col-sm2 layui-col-md1" style="width:">
                                <div class="grid-demo grid-demo-bg1" align="center" style="margin:10px auto;">
                                    <a href="@Url.Action(childurl[0], childurl[1], new { area = childurl[2]})">
                                        <img class="layui-nav-img" src="@src" />
                                    </a>
                                    <br />
                                    <label class="layui-form-label-img">@child[j].RIGHTNAME</label>
                                </div>
                            </div>
                        }
                    }
                }

            </div>
        </fieldset>



    }


}




