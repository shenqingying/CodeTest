@{
    Layout = "~/Areas/CRM/Views/Shared/_Layout_PDA.cshtml";
    ViewBag.Title = "验货标记";
    Session["TITLENAME"] = "验货标记";

    string Staffid = "";
    if (Session["STAFFID"] != null)
    {
        Staffid = Session["STAFFID"].ToString();
    }

    string state = "";
    string appid = "";
    if (Session["state"] != null)
    {
        state = Session["state"].ToString();
        if (Session["state"] == "WX")
        {
            appid = System.Configuration.ConfigurationManager.AppSettings["AppID"];
        }
        else if (Session["state"] == "QY")
        {
            appid = System.Configuration.ConfigurationManager.AppSettings["CorpID"];
        }

    }

    string DXM_url = System.Configuration.ConfigurationManager.AppSettings["DXM_url"];

}
<script type="text/html" id="indexTpl">
    {{d.LAY_TABLE_INDEX+1}}
</script>
<script type="text/html" id="bar">
    <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="delete">删除</a>
</script>

<div>
    <br />
    <div id="div_fxs" class="layui-form-item">
        <div id="div_scan_wlm" class="layui-input-block" style="margin-left: 10px;">
            <input id="WLM" type="text" placeholder="请扫描货物标识条码" autocomplete="off" class="layui-input">
        </div>

    </div>


    <div id="div_table">
        
    </div>

    @*<div id="div_tableMX">

    </div>*@


    <br /><br /><br /><br />
    <div class="layui-footer" style="left:0;background: #009688;padding: 0;">
        <div id="div_btn_confirm" class="layui-input-inline" style="width:100%;margin:0">
            <button id="btn_confirm" class="layui-btn" style="width:100%">确定</button>
        </div>
    </div>



</div>
<div class="bottom"></div>


<input id="dxm_url" hidden />
<script>
    $(document).ready(function () {
        $("#staffid").val("@Staffid");
        $("#state").val("@state");
        $("#appid").val("@appid");
        $("#dxm_url").val("@DXM_url");
    });
</script>
@section scripts {
    @Scripts.Render("~/bundles/WMS/BC_TM/YH_MARK")
}